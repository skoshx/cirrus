{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"isolatedModules": true,
		"lib": ["esnext", "DOM"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"jsx": "react"
	},
	"include": ["./src/**/*.js", "./src/**/*.ts", "./test/**/*.ts", "./test/**/*.js"],
	"exclude": ["./node_modules/**"]
}
