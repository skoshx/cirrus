{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "es2020",
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "jsx": "react"
  },
  "include": ["src/", "test/"]
}
